import turtle

#Set up the turtle
t = turtle.Turtle()
t.speed(3)
t.color("red")
turtle.bgcolor("black")  #Change background color

#Function to draw a heart shape
t.begin_fill()
t.fillcolor("red")

t.left(50)  
t.forward(133)  
t.circle(50, 200)  
t.right(140)  
t.circle(50, 200)  
t.forward(133)  

t.end_fill()

#Hide turtle and display the drawing
t.hideturtle()
turtle.done()
